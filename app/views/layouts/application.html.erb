<!DOCTYPE html>
<html>
  <head>
    <title>MembershipSite</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar is-primary">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </div> 
      </div>
  

    <div id="navbarExample" class="navbar-menu">
      <div class="navbar-end">
              <div class="navbar-item">
        <div class="field is-grouped">
          <p class="control">
            <%= link_to 'New Post', new_post_path, class: "button is-primary is-inverted"%>
          </p>

          <% if user_signed_in? %>
            <p class="control">
              <%= link_to current_user.email, edit_user_registration_path, class: "button is-inverted is-primary" %>
            </p>
            <p>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "button is-black"%>
            </p>
          <% else %>
            <p class="control">
              <%= link_to 'Sign In', new_user_session_path, class: "button is-primary is-inverted" %>
            </p>

            <p class="control">
              <%= link_to 'Sign Up', new_user_registration_path, class: "button is-primary is-inverted" %>
            </p>
          <% end %>
          
        
          </div>
        </div>
      </div>
    </div>
  </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
